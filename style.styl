body
  font-family: 'Titillium Web', sans-serif
  font-size: 16px
  color: #484848

nav
  width: 100%
  top: 0
  left: 0
  background: #2f3241
  position: fixed
  z-index: 9999
  
  ul
    padding: 0
    margin: 0
    list-style: none
    display: flex
    
    li
      text-align: center
      line-height: 60px
      position: relative
      overflow: hidden
      flex: 1 1 auto
      
      a
        color: #e74c3c
        text-decoration: none
        display: block
    
      &:before
        content: ""
        width: 100%
        height: 3px
        bottom: 0
        right: 100%
        background: #e74c3c
        position: absolute
        transition: 0.5s
    
      &:hover:before,
      &.active:before
        right: 0
        
main
  width: 90%
  margin: 100px auto 50px auto

